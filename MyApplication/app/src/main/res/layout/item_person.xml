<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="8dp">

    <TextView
        android:id="@+id/item_person_id"
        android:layout_width="0dp"
        android:layout_marginLeft="4dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <TextView
        android:id="@+id/item_person_name"
        android:layout_width="0dp"
        android:layout_marginLeft="4dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/item_person_id"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <TextView
        android:id="@+id/item_person_birthDate"
        android:layout_width="0dp"
        android:layout_marginLeft="4dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/item_person_name"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <TextView
        android:id="@+id/item_person_quotes"
        android:layout_width="0dp"
        android:layout_marginLeft="4dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/item_person_birthDate"
        app:layout_constraintLeft_toLeftOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>